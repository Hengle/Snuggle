<UserControl x:Class="Snuggle.Components.Renderers.NullRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"
                   Opacity="0.5" FontSize="30">
            <Span>
                NO RENDERER
                <LineBreak />
                DATA ONLY
            </Span>
        </TextBlock>
        <Image Source="/Snuggle;component/Snuggle.png" MaxWidth="466" MaxHeight="512" Opacity="0.07"
               VerticalAlignment="Top" HorizontalAlignment="Left" />
    </Grid>
</UserControl>
